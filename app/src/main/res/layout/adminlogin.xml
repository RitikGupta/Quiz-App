<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/game_activity_back">


    <EditText
        android:id="@+id/login_email"
        android:layout_width="fill_parent"
        android:layout_height="26dp"
        android:ems="10"
        android:inputType="textEmailAddress"
        android:background="#ffffff"
        android:hint="Email"
        android:textColorHint="#696969"
        android:textColor="#000000"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/login_pass"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <EditText
        android:id="@+id/login_pass"
        android:layout_width="fill_parent"
        android:layout_height="26dp"
        android:background="#ffffff"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="#696969"
        android:textColor="#000000"
        android:inputType="textPassword"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true" />

    <Button
        android:id="@+id/lv_login"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:textSize="20sp"
        android:textColor="#ffffff"
        android:background="@drawable/button_shape2"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="-8"
        android:shadowRadius="4"
        android:layout_alignStart="@+id/login_pass"
        android:layout_below="@+id/login_pass"
        android:layout_marginTop="19dp"
        android:text="LOGIN"
        android:layout_alignParentEnd="true"
        android:layout_alignLeft="@+id/login_pass"
        android:layout_alignParentRight="true" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="116dp"
        android:textColor="#000000"
        android:textStyle="bold"
        android:textSize="17sp"
        android:text="Signup for new Admin"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="116dp"
        android:clickable="true"
        android:onClick="move_to_admin_signup"/>
</RelativeLayout>