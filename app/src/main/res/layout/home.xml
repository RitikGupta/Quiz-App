<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@drawable/p3">


    <Button
        android:id="@+id/button"
        android:textColor="#FFFFFF"
        android:textSize="26sp"

        android:layout_width="260dp"
        android:layout_height="60dp"
        android:background="@drawable/button_shape2"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="-8"
        android:shadowRadius="4"

        android:text="PLAY GAME"
        android:layout_marginLeft="135dp"
        android:onClick="move_to_levels"
        android:layout_above="@+id/button2"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="66dp" />

    <Button
        android:id="@+id/button2"
        android:textColor="#FFFFFF"
        android:textSize="26sp"

        android:layout_width="260dp"
        android:layout_height="60dp"
        android:background="@drawable/button_shape2"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="-8"
        android:shadowRadius="4"

        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:text="PLAY CHALLENGE"
        android:onClick="move_to_questions"/>

    <Button
        android:id="@+id/button3"
        android:textColor="#FFFFFF"
        android:textSize="26sp"

        android:layout_width="260dp"
        android:layout_height="60dp"
        android:background="@drawable/button_shape2"
        android:shadowColor="#A8A8A8"
        android:shadowDx="0"
        android:shadowDy="-8"
        android:shadowRadius="4"

        android:layout_marginTop="82dp"
        android:text="ADMIN LOGIN"
        android:onClick="move_to_adminlogin"
        android:layout_below="@+id/button2"
        android:layout_centerHorizontal="true" />

    <ToggleButton
        android:id="@+id/togglebutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textOn="Sound on"
        android:textOff="Sound off"
        android:onClick="onToggleClicked"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="29dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
</RelativeLayout>